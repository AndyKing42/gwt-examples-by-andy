<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <g:ResizeLayoutPanel ui:field='topLayoutPanel'>
    <g:HeaderPanel ui:field='headerPanel'>
      <g:Label text='Top Panel'/>
      <c:DataGrid ui:field='dataGrid'/>
      <g:HorizontalPanel>
        <g:Button
          ui:field='addRecordButton'
          text='Add Record'/>
        <g:Button
          ui:field='add10RecordsButton'
          text='Add 10 Records'/>
        <g:Button
          ui:field='add100RecordsButton'
          text='Add 100 Records'/>
        <g:Label ui:field='numberOfRecordsLabel'/>
      </g:HorizontalPanel>
    </g:HeaderPanel>
  </g:ResizeLayoutPanel>
</ui:UiBinder>