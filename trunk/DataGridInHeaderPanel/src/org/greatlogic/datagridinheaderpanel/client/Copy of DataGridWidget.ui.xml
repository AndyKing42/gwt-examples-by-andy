<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <g:SplitLayoutPanel>
    <g:west size='400'>
      <g:HeaderPanel>
        <g:HorizontalPanel>
          <g:Button
            ui:field='add100RecordsButton'
            text='Add 100 Records'/>
          <g:Label ui:field='numberOfRecordsLabel'/>
        </g:HorizontalPanel>
        <c:DataGrid
          ui:field='dataGrid'
          width='100%'
          height='100%'/>
      </g:HeaderPanel>
    </g:west>
    <g:center>
      <g:Label>Center</g:Label>
    </g:center>
  </g:SplitLayoutPanel>
</ui:UiBinder>